    "version": "0.2.0",
    "configurations": [
        {
            "name": "Inline flow",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {
                "BENTO_CONFIG": "${workspaceFolder}/config/pipeline_latest_merger.yaml",
                "GOCACHE": "C:\\gocache",
                "GOTMPDIR": "C:\\gotmp"
            },
            "cwd": "${workspaceFolder}",
            "showLog": true,
            "trace": "verbose",
        },
        {
            "name": "Bento – ETL Simulate",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "env": {
                "BENTO_CONFIG": "${workspaceFolder}/config/pipeline_etl_simulate.yaml",
                "GOCACHE": "C:\\gocache",
                "GOTMPDIR": "C:\\gotmp"
            }
        },
        {
            "name": "Bento – ETL Various Simulate",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "env": {
                "BENTO_CONFIG": "${workspaceFolder}/config/pipeline_etl_varied.yaml",
                "GOCACHE": "C:\\gocache",
                "GOTMPDIR": "C:\\gotmp"
            }
        },
        {
            "name": "Bento – Merger Pipeline Dev",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "cwd": "${workspaceFolder}",
            "env": {
                "BENTO_CONFIG": "${workspaceFolder}/config/pipeline_log_compacted.yaml",
                "GOCACHE": "C:\\gocache",
                "GOTMPDIR": "C:\\gotmp"
            }
        },
        {
            "name": "Attach to Delve (DAP, Docker)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "127.0.0.1",
            "port": 40000,
            "remotePath": "/app",
            "showLog": true,
            "trace": "verbose"
        }
    ]
}